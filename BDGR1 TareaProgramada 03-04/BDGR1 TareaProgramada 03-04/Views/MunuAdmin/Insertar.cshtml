@model BDGR1_TareaProgramada_03_04.Models.EntidadEmpleado

@{
    ViewData["Title"] = "Insertar";
    List<SelectListItem> OpcionesTipoDocID = (List<SelectListItem>)ViewBag.OpcionesTipoDocID;
    List<SelectListItem> OpcionesTipoDepart = (List<SelectListItem>)ViewBag.OpcionesTipoDepart;
    List<SelectListItem> OpcionesTipoPuesto = (List<SelectListItem>)ViewBag.OpcionesTipoPuesto;
}

<br />
<h4>Insertar</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Insertar">
        <form>
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group" style="margin-top: 20px;">
				<label asp-for="Nombre" class="control-label"></label>
				<input asp-for="Nombre" class="form-control" />
				<span asp-validation-for="Nombre" class="text-danger"></span>
			</div>

            <div class="form-group" style="margin-top: 20px;">
                <label asp-for="ValorDocIdentidad" class="control-label"></label>
                <input asp-for="ValorDocIdentidad" class="form-control" />
                <span asp-validation-for="ValorDocIdentidad" class="text-danger"></span>
            </div>

            <div class="form-group" style="margin-top: 20px;">
                <label asp-for="IdTipoDocIdentidad" class="control-label">Tipo de identificacion:</label>
                <select asp-for="IdTipoDocIdentidad" class="form-select" name="tipoDocId">
                    @foreach (var op in OpcionesTipoDocID)
                    {
                        <option value="@Html.DisplayName(op.Value)"> @Html.DisplayName(op.Text)</option>
                    }
                </select>
            </div>

            <div class="form-group" style="margin-top: 20px;">
                <label asp-for="IdDepartamento" class="control-label">Departamentos:</label>
                <select asp-for="IdDepartamento" class="form-select" name="departamento"> 
                    @foreach (var op in OpcionesTipoDepart)
                    {
                        <option value="@Html.DisplayName(op.Value)"> @Html.DisplayName(op.Text)</option>
                    }

                </select>
            </div>

            <div class="form-group" style="margin-top: 20px;">
                <label asp-for="IdPuesto" class="control-label">Puestos:</label>
                <select asp-for="IdPuesto" class="form-select" name="puesto">
                    @foreach (var op in OpcionesTipoPuesto)
                    {
                        <option value="@Html.DisplayName(op.Value)"> @Html.DisplayName(op.Text)</option>
                    }
                </select>
            </div>

            @if (TempData["Message"] != null)
            {
                <div>
                    @TempData["Message"]
                </div>
            }
            <br />
            <div class="form-group">
                <input type="submit" value="Confirmar" class="btn btn-primary" />
            </div>

        </form> 
        </form>
        <br />

        <a asp-action="ListaEmpleado">  <input type="submit" value="Cancelar" class="btn btn-primary"> </a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
 }